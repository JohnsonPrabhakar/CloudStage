rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Make sure to use the actual admin email address here.
      return request.auth.token.email == 'admin@cloudstage.in';
    }

    // --- Public Access Rules ---
    // Anyone can read approved events, artist profiles, movies, and site config.
    match /events/{eventId} {
      allow read: if resource.data.moderationStatus == 'approved';
    }
    match /artists/{artistId} {
      allow read: if true;
    }
     match /movies/{movieId} {
      allow read: if true;
    }
    match /config/{docId} {
      allow read: if true;
    }

    // --- Artist-Specific Rules ---
    // Artists can read their own profile data for the dashboard.
    // They can also create their profile for the first time.
    match /artists/{userId} {
      allow read, create, update: if isOwner(userId) || isAdmin();
    }

    // Artists can read all of their own events (pending, approved, rejected).
    // They can create new events. They can update their own events.
    match /events/{eventId} {
       allow read, update: if isOwner(resource.data.artistId);
       allow create: if isOwner(request.resource.data.artistId);
    }

    // --- User-Specific Rules ---
    // Logged-in users can create tickets for themselves.
    // They can only read tickets where their userId matches.
    match /tickets/{ticketId} {
        allow create: if isOwner(request.resource.data.userId);
        allow read: if isOwner(resource.data.userId);
    }
    
    // --- Admin-Only Rules ---
    // The admin has extra permissions to manage the platform.
    match /events/{eventId} {
      // Admin can read/update any event (e.g., for moderation).
      allow read, update: if isAdmin();
    }
    match /artists/{artistId} {
        // Admin can read/update any artist profile.
        allow read, update: if isAdmin();
    }
    match /movies/{movieId} {
        // Admin can perform all actions on movies.
        allow read, create, update, delete: if isAdmin();
    }
    match /config/{docId} {
        // Admin can update site-wide configuration.
      allow write: if isAdmin();
    }
  }
}
