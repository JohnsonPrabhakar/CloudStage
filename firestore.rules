
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@cloudstage.in';
    }
    
    // Artists Collection
    match /artists/{artistId} {
      // Anyone can read public artist profiles
      allow read: if true;
      // A user can create their own artist profile after signing up
      allow create: if request.auth != null && request.auth.uid == artistId;
      // An artist can update their own profile
      allow update: if request.auth != null && request.auth.uid == artistId;
      // An artist or an admin can delete a profile
      allow delete: if request.auth != null && (request.auth.uid == artistId || isAdmin());
    }

    // Events Collection
    match /events/{eventId} {
      // Allow read if event is approved, or if the requester is the artist or an admin
      allow read: if resource.data.moderationStatus == 'approved' 
                    || (request.auth != null && request.auth.uid == resource.data.artistId) 
                    || isAdmin();
      
      // Allow artist to create an event for themselves
      allow create: if request.auth != null && request.auth.uid == request.resource.data.artistId;
      
      // Allow artist or admin to update an event
      allow update: if request.auth != null && (request.auth.uid == resource.data.artistId || isAdmin());
    }

    // Tickets Collection
    match /tickets/{ticketId} {
      // A user can manage their own tickets
      allow read, create: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Movies Collection
    match /movies/{movieId} {
        // Anyone can read movie info
        allow read: if true;
        // Only admin can manage movies
        allow create, update, delete: if isAdmin();
    }

    // Config Collection (for site status)
    match /config/{configId} {
        // Anyone can read site status
        allow read: if true;
        // Only admin can update site status
        allow update: if isAdmin();
    }
  }
}
