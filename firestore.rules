
rules_version = '2';

service cloud.firestore {
  match /databases/cloudstage/documents {

    // Helper function to check if the user is an Admin
    function isAdmin() {
      // This requires a collection named 'admins' where the document ID is the user's UID.
      // This is a secure way to manage admin roles.
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // --- CATCH-ALL ADMIN RULE ---
    // A user who is an admin can read and write any document in the database.
    // This rule is checked first.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // --- ARTIST PROFILES ---
    match /artists/{artistId} {
      // Any authenticated user can view an artist's profile.
      allow get: if request.auth != null;
      // An artist can create their own profile, or update their own profile.
      allow create, update: if request.auth.uid == artistId;
    }

    // --- EVENTS ---
    match /events/{eventId} {
      // READ (get, list) access rules for events.
      allow read: if 
        // Allow if the event is approved (for public viewing on homepage, etc.)
        resource.data.moderationStatus == 'approved' ||
        // OR, allow if the logged-in user is the artist who owns this event
        (request.auth != null && resource.data.artistId == request.auth.uid);

      // WRITE (create, update) access rules for events.
      allow create, update: if 
        // Allow if the logged-in user is the artist creating/updating the event.
        request.auth.uid != null && request.resource.data.artistId == request.auth.uid;
    }

    // --- TICKETS ---
    match /tickets/{ticketId} {
      // A user can read their own tickets.
      allow read: if request.auth.uid == resource.data.userId;
      // Any authenticated user can create a ticket.
      allow create: if request.auth != null;
    }

    // --- MOVIES ---
    match /movies/{movieId} {
      // Anyone can read movie documents.
      allow read: if true;
      // Only admins can add, edit, or delete movies.
      allow write: if isAdmin();
    }
    
    // --- SITE CONFIGURATION ---
    match /config/{configId} {
        // Anyone can read the site configuration (like its online/offline status).
        allow read: if true;
        // Only an admin can change the site configuration.
        allow write: if isAdmin();
    }
  }
}
