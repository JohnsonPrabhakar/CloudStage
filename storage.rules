rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth != null && get(/databases/(default)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }

    // Artist Profile Pictures
    match /artists/{artistId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth.uid == artistId || isAdmin();
    }

    // Event Banners
    match /artists/{artistId}/events/{eventId}/banner.jpg {
      allow read: if true;
      allow write: if request.auth.uid == artistId || isAdmin();
    }
    
    // Movie files and posters
    match /movies/{movieId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
