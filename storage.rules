rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@cloudstage.in';
    }

    // Allow public read on movie posters and videos
    match /posters/{allPaths=**} {
      allow read: if true;
    }
    
    match /movies/{allPaths=**} {
      allow read: if true;
    }

    // Only allow admin to upload/delete posters and movies
    match /posters/{fileName} {
      allow write: if isAdmin();
    }
    
    match /movies/{fileName} {
      // Allow larger file sizes for video uploads (e.g., 100MB)
      allow write: if isAdmin() && request.resource.size < 100 * 1024 * 1024;
    }
  }
}
