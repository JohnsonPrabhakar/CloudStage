rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files so banners, posters, etc. can be displayed.
    match /{allPaths=**} {
      allow read;
    }

    // --- WRITE RULES ---

    // Allow an authenticated artist to upload their profile picture, banners, and verification files.
    match /artists/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to upload movies. 
    // The application logic ensures only the admin can access the upload form.
    match /movies/{movieId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
