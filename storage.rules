
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    
    // Public read access for all files to display images and videos.
    match /{allPaths=**} {
      allow read;
    }
    
    // Secure write access.
    
    // Artist profile pictures
    match /artists/{artistId}/profile.jpg {
      allow write: if request.auth != null && request.auth.uid == artistId;
    }
    
    // Event banners
    match /artists/{artistId}/events/{eventId}/banner.jpg {
      allow write: if request.auth != null && request.auth.uid == artistId;
    }

    // Movie files and posters
    match /movies/{movieId}/{fileName} {
      allow write: if isAdmin();
    }
  }
}
