rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Public read for all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Artists can only upload to their own folder structure.
    // e.g., artists/{userId}/profile.jpg or artists/{userId}/events/{eventId}/banner.jpg
    match /artists/{userId}/{allPaths=**} {
      allow write: if isOwner(userId);
    }
    
    // Admins can upload movie files and posters.
    match /movies/{movieId}/{allPaths=**} {
        allow write: if isAdmin();
    }
  }
}
