rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files, which is necessary for anyone
    // to see posters and profile pictures.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated artists to upload their own profile picture.
    // The filename must match their user ID.
    match /artist-profiles/{userId}_{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins to upload movies and posters. This requires the admin
    // to be authenticated. For this prototype, we assume an admin user exists.
    // In a production app, you would check for a specific admin role in Firestore.
    match /movies/{fileName} {
      allow write: if request.auth != null;
    }
    match /movie-posters/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
