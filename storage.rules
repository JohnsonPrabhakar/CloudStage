rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@cloudstage.in';
    }

    // Artists can upload their own profile picture.
    match /artists/{artistId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == artistId;
    }

    // Artists can upload banners for their events.
    match /artists/{artistId}/events/{eventId}/banner.jpg {
       allow read: if true;
       allow write: if request.auth != null && request.auth.uid == artistId;
    }

    // Movie files can only be managed by admins.
    match /movies/{movieId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
