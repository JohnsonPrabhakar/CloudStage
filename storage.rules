
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin role via email claim
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@cloudstage.in';
    }

    // Public read access for all files to allow images and videos to be displayed.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Artists can write to their own designated paths for profile pictures.
    match /artists/{artistId}/profile.jpg {
      allow write: if request.auth != null && request.auth.uid == artistId;
    }

    // Artists can write banners to their own designated event paths.
    match /artists/{artistId}/events/{eventId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == artistId;
    }
    
    // Only admins can write to the movies directory.
    match /movies/{movieId}/{fileName} {
      allow write: if isAdmin();
    }
  }
}
