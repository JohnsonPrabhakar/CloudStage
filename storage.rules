rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Secure artist-specific paths
    match /artists/{artistId}/{allPaths=**} {
      // Allow write only if the user is authenticated and their UID matches the artistId in the path
      allow write: if request.auth != null && request.auth.uid == artistId;
    }
    
    // Secure movie paths for admin uploads
    match /movies/{movieId}/{allPaths=**} {
        // Allow write only if the user is an authenticated admin
        allow write: if request.auth != null && request.auth.token.email == 'admin@cloudstage.in';
    }
  }
}
